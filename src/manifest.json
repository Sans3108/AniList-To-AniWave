{
  "name": "AniList to AniWave",
  "description": "Adds a button on AniList anime pages that searches the anime on AniWave.",
  "version": "4.0.1",
  "manifest_version": 3,
  "background": {
    "service_worker": "scripts/service-worker.js"
  },
  "permissions": ["scripting", "tabs"],
  "host_permissions": ["https://anilist.co/*", "https://aniwave.to/*"],
  "icons": {
    "256": "assets/icon256.png"
  },
  "update_url": "https://github.com/Sans3108/AniList-To-AniWave/releases/latest/download/update.xml"
}
